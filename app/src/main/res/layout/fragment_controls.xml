<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/controlTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Public Speaking"
        android:textSize="45sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/public_speaking"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="156dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/controlTitle"
        android:layout_marginBottom="222dp"
        android:text="Environment" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="156dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/controlTitle"
        android:layout_marginBottom="166dp"
        android:text="Time" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="156dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/controlTitle"
        android:layout_marginBottom="111dp"
        android:text="Escape" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="156dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/controlTitle"
        android:layout_marginBottom="271dp"
        android:text="Number of People" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView13"
        android:layout_alignTop="@+id/textView11"
        android:text="Yes" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/controlTitle"
        android:layout_alignTop="@+id/textView7"
        android:text="Presentation" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/controlTitle"
        android:layout_alignTop="@+id/textView12"
        android:text="15" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/textView13"
        android:layout_alignTop="@+id/textView8"
        android:text="15" />

    <Button
        android:id="@+id/btnStartSim"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@android:color/holo_green_dark"
        android:text="Start"
        android:textSize="35dp"
        android:onClick="startSim"/>

</RelativeLayout>